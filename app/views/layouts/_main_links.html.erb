<menu class="main">
  <% if CurrentUser.is_anonymous? %>
    <%= nav_link_to("Sign in", new_session_path, :class => "login") %>
  <% else %>
    <%= nav_link_to("My Account #{CurrentUser.dmail_count}", user_path(CurrentUser.user)) %>
  <% end %>
  <%= nav_link_to("Boorus", boorus_path) %>
  <% if Booru.current %>
    <%= nav_link_to("Posts", booru_posts_path(Booru.current.slug)) %>
    <%= nav_link_to("Comments", booru_comments_path(Booru.current.slug, :group_by => "post")) %>
    <%= nav_link_to("Notes", booru_notes_path(Booru.current.slug)) %>
    <%= nav_link_to("Pools", booru_pools_path(Booru.current.slug)) %>
    <%= nav_link_to("Wiki", booru_wiki_pages_path(Booru.current.slug, :title => "help:home")) %>
    <%= nav_link_to("Forum", booru_forum_topics_path(Booru.current.slug, :class => (CurrentUser.has_forum_been_updated? ? "forum-updated" : nil))) %>
  <% end %>
  <%= nav_link_to("More&nbsp;&raquo;".html_safe, site_map_path, :id => "site-map-link") %>
