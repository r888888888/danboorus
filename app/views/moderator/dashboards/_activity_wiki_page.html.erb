<table class="striped">
  <caption>Wiki Page Updates</caption>
  <thead>
    <tr>
      <th>User</th>
      <th>Count</th>
    </tr>
  </thead>
  <tbody>
    <% @dashboard.wiki_pages.each do |activity| %>
      <tr>
        <td><%= mod_link_to_user(activity.user) %></td>
        <td><%= link_to activity.count, wiki_page_versions_path(:search => {:updater_id => activity.user.id}) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
