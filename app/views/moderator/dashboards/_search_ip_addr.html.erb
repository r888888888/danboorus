<%= form_tag(booru_moderator_ip_addrs_path(Booru.current.slug), :method => :get, :class => "simple_form") do %>
  <div class="input">
    <label for="user_ids">Search IPs</label>
    <%= text_field_tag "search[ip_addr]", params[:ip_addrs] %>
    <span class="hint">Separate with commas</span>
  </div>

  <%= submit_tag "Search" %>
<% end %>

