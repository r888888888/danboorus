<div id="c-post-versions">
  <div id="a-search">
    <h1>Search Changes</h1>

    <div id="search">
      <%= form_tag(booru_post_versions_path(Booru.current.slug), :method => :get, :class => "simple_form") do %>
        <%= search_field "updater_name", :label => "User" %>
        <%= search_field "post_id", :label => "Post" %>
        <%= submit_tag "Search" %>
      <% end %>
    </div>
  </div>
</div>

<%= render "secondary_links" %>

<% content_for(:page_title) do %>
  Search Post Changes - <%= Danbooru.config.app_name %>
<% end %>
