<!--
- post_set
 -->

<div id="excerpt" style="display: none;">
  <% if post_set.has_wiki? %>
    <% post_set.wiki_page.tap do |wiki_page| %>
      <div class="prose">
        <% if wiki_page.other_names.present? %>
          <p><%= wiki_page_other_names_list(wiki_page) %></p>
        <% end %>

        <%= format_text(wiki_page.presenter.excerpt) %>

        <p class="links">
          <%= link_to "View wiki", booru_wiki_page_path(Booru.current, wiki_page.id) %>
        </p>
      </div>
    <% end %>
  <% elsif post_set.has_pool? %>
    <% post_set.pool.tap do |pool| %>
      <h4>
        <%= pool.pretty_category %>:
        <%= link_to pool.pretty_name, booru_pool_path(Booru.current, pool), :class => "pool-category-#{pool.category}" %>
        <% if pool.is_deleted? %>
          <span class="inactive">(deleted)</span>
        <% end %>
      </h4>

      <div id="description" class="prose">
        <%= format_text(post_set.pool.description) %>
      </div>

      <p class="links">
        <%= link_to "View pool", booru_pool_path(Booru.current, post_set.pool.id) %>
      </p>
    <% end %>
  <% else %>
    <% if post_set.tag_string.present? %>
      <p>There is currently no wiki page for the tag "<%= post_set.tag_string %>". You can <%= link_to "create one", new_booru_wiki_page_path(Booru.current, :wiki_page => {:title => post_set.tag_string}) %>.</p>
    <% end %>
  <% end %>
</div>
