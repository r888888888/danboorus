<div id="c-tags">
  <div id="a-index">
    <%= render "search" %>
    <table class="striped">
      <thead>
        <tr>
          <th>Count</th>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tags.each do |tag| %>
          <tr>
            <td style="<%= tag_post_count_style(tag) %>"><%= tag.post_count %></td>
            <td>
              <%= link_to("?", show_or_new_wiki_pages_path(:title => tag.name)) %>
              <%= link_to(tag.name, booru_posts_path(Booru.current, :tags => tag.name)) %>
            </td>
            <td>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= numbered_paginator(@tags) %>
  </div>
</div>

<%= render "secondary_links" %>

<% content_for(:page_title) do %>
  Tags - <%= Danbooru.config.app_name %>
<% end %>
